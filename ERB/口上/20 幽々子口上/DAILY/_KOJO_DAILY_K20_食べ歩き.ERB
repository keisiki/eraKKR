	CALL ADD_COOLTIME(MASTER, 1)
	CALL PRINT_ADD_EXP(MASTER, "무투경험치", RAND(1, 3), 1)
	CALL TRAIN_AUTO_ABLUP(MASTER)
	KDVAR:대상:유유코_먹으러돌아다니기 = 1
ENDIF

RETURN 1
