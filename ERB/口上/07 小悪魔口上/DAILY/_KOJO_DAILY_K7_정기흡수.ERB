	CFLAG:대상:조교중돌아가지않는다 = 1
	BASE:대상:체력 = MAXBASE:대상:체력
	BASE:대상:기력 = MAXBASE:대상:기력
	;턴 엔드 조교를 온
	FLAG:턴엔드조교 = 1
	;그 이후의 데일리 이벤트 발생을 잡는다
	DAILY_CANCEL = 1
	;플래그
	KDVAR:대상:소악마_정기흡수 = 1
	KDVAR:대상:소악마_정기흡수_조교중 = 1
	CALL SINGLE_DRAWLINE
	PRINTFORML
	CALL ADD_EVENTTRAIN_CALLEE("KOJO_DAILY_K7_DRAIN_SPERM")
