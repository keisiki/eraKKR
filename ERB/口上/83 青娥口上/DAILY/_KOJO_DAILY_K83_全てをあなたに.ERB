		PRINTFORMW 두 명을 침대에 쓰러트렸다……
		CALL COLOR_PRINTW(@"%ANAME(요시카)%가 복종을 맹세했습니다", 칼라_주의)
		CALL COLOR_PRINTW(@"%ANAME(요시카)%의 합의를 얻었습니다", 칼라_주의)

		;전원의 조교참가플래그를 클리어
		CVARSET CFLAG, 6, 0

		CFLAG:대상:종속도 += 500
