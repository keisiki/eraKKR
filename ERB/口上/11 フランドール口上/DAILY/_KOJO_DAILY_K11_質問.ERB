레밀리아 = NAME_TO_CHARA("레밀리아")

SIF KDVAR:대상:플랑도르_질문
	RETURN 0

RETURN CHECK_KOJO_DAILY_HAPPEN(대상, 1, 0, 1) && CHECK_KOJO_DAILY_HAPPEN(레밀리아)

